---

import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NextJS,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: Tailwind,
    },
};

const PROYECTS = [
    {
        title: "Proyect 1",
        description:
            "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla vitae diam",
        link: "https://tabler.io/",
        github: "https://github.com/GuariosMaster",
        image: "/projects/imagen1.webp",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    },
];
---

{
    PROYECTS.map(({ image, title, description, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold text-blue-400 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex justify-center items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-6" /> 
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/15 "
                src={image}
                alt={`Captura de pantalla del proyecto ${image}`}
            />
        </article>
    ))
}
