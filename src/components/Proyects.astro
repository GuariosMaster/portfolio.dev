---

import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import NestJS from "./icons/NestJS.astro"
import Postgres from "./icons/Postgres.astro"
import Swagger from "./icons/Swagger.astro"

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NextJS,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: Tailwind,
    },
    NESTJS: {
        name: "Nest.js",
        class: "bg-[#003159] text-white",
        icon: NestJS,
    },
    POSTGRES: {
        name: "PostgreSQL",
        class: "bg-[#003159] text-white",
        icon: Postgres,
    },
    SWAGGER: {
        name: "Swagger",
        class: "bg-[#003159] text-white",
        icon: Swagger,
    },
};

const PROYECTS = [
    {
        title: "API CATS",
        description:
            "Our API, developed using Nest.js, offers a robust and efficient solution for handling various tasks within our application ecosystem. Leveraging the power and flexibility of Nest.js, we've created a modular and scalable API architecture that caters to our specific business needs while ensuring maintainability and extensibility.",
        link: "https://catsapirest.onrender.com/docs",
        github: "https://github.com/GuariosMaster",
        image: "/projects/swagger.png",
        tags: [TAGS.NESTJS, TAGS.POSTGRES, TAGS.SWAGGER],
    },
];
---

{
    PROYECTS.map(({ image, title, description, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold text-blue-400 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex justify-center items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-6" /> 
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/15 "
                src={image}
                alt={`Captura de pantalla del proyecto ${image}`}
            />
        </article>
    ))
}
